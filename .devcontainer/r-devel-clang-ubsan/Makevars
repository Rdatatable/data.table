
CC=clang -fsanitize=undefined -fno-sanitize=float-divide-by-zero -fno-sanitize=alignment -fno-omit-frame-pointer
CXX=clang++ -stdlib=libc++ -fsanitize=undefined -fno-sanitize=float-divide-by-zero -fno-sanitize=alignment -fno-omit-frame-pointer
CFLAGS=-g -O3 -Wall -pedantic
LDFLAGS=-L/usr/local/clang/lib64 -L/usr/local/lib64 -lubsan
